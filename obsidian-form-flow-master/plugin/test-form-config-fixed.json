{
  "id": "test-form",
  "name": "测试表单",
  "description": "用于测试右键菜单功能的表单",
  "fields": [
    {
      "id": "model",
      "label": "AI模型",
      "type": "select",
      "required": true,
      "options": [
        { "value": "gpt-4", "label": "GPT-4" },
        { "value": "gpt-3.5-turbo", "label": "GPT-3.5 Turbo" },
        { "value": "claude-3", "label": "Claude 3" }
      ],
      "defaultValue": "gpt-4"
    },
    {
      "id": "template",
      "label": "模板",
      "type": "select",
      "required": false,
      "options": [
        { "value": "summary", "label": "总结模板" },
        { "value": "analysis", "label": "分析模板" },
        { "value": "translation", "label": "翻译模板" }
      ]
    },
    {
      "id": "content",
      "label": "内容",
      "type": "textarea",
      "required": true,
      "placeholder": "请输入要处理的内容",
      "rightClickSubmit": true
    },
    {
      "id": "title",
      "label": "标题",
      "type": "text",
      "required": false,
      "placeholder": "请输入标题",
      "rightClickSubmit": true
    }
  ],
  "actions": [
    {
      "type": "create_file",
      "config": {
        "path": "output/{{model}}-{{timestamp}}.md",
        "content": "# {{title}}\n\n**模型**: {{model}}\n**模板**: {{template}}\n**内容**: {{content}}"
      }
    }
  ]
}